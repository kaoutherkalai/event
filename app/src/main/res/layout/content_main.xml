<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="match_parent"
    android:paddingBottom="3dp"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:weightSum="1">>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:weightSum="1"
        android:layout_alignParentRight="true">

        <ImageView
            android:layout_width="168dp"
            android:layout_height="193dp"
            android:src="@drawable/tt"
            android:background="#ffffff"
            android:contentDescription="@string/image" />

        <Button
            android:layout_width="248dp"
            android:layout_height="40dp"
            android:text="@string/b1"
            android:id="@+id/b1"
            android:background="#9e3"
            android:allowUndo="false"
            android:clickable="false"
            android:contextClickable="false"
            android:elegantTextHeight="true"
            android:textStyle="bold|italic"
            android:drawableLeft="@drawable/dar"
            android:drawableStart="@drawable/dar"
           />


        <Button
            android:layout_width="248dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:text="@string/b3"
            android:drawableLeft="@drawable/oy"
            android:id="@+id/b3"
            android:background="#FFA91F"
            android:textStyle="bold|italic"

           />

        <Button
            android:layout_width="248dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:text="@string/b2"
            android:id="@+id/b2"
            android:background="#de0e53"
            android:elegantTextHeight="false"
            android:textStyle="bold|italic"
            android:drawableLeft="@drawable/fav"
       />


        <Button
            android:layout_width="248dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:text="@string/b5"
            android:drawableLeft="@drawable/ty"
            android:id="@+id/b5"
            android:background="#ff1fd6"
            android:textStyle="bold|italic" />
        <Button
            android:layout_width="248dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:text="@string/b6"
            android:drawableLeft="@drawable/maps"
            android:id="@+id/b6"
            android:background="#fff81f"
            android:textStyle="bold|italic" />

        <Button
            android:layout_width="248dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"

            android:text="@string/b4"
            android:drawableLeft="@drawable/param"
            android:id="@+id/b4"
            android:background="#217cc2"
            android:textStyle="bold|italic"

            />


        <com.google.android.gms.ads.AdView

            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="banner"
            ads:adUnitId="ca-app-pub-2622223294159034~1725034193">
        </com.google.android.gms.ads.AdView>

        />

    </LinearLayout>
</ScrollView>
